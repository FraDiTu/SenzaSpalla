<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.saslab.ui.RecipeViewDialogController"
            prefHeight="700.0" prefWidth="800.0">

  <top>
    <VBox spacing="10.0">
      <padding>
        <Insets bottom="10.0" left="15.0" right="15.0" top="15.0"/>
      </padding>
      
      <Label fx:id="recipeNameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
      
      <HBox spacing="20.0">
        <Label fx:id="ownerLabel" style="-fx-font-style: italic;"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="stateLabel" style="-fx-font-weight: bold;"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="timeLabel"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="portionsLabel"/>
      </HBox>
      
      <Separator/>
    </VBox>
  </top>

  <center>
    <ScrollPane fitToWidth="true" fitToHeight="true">
      <VBox spacing="20.0">
        <padding>
          <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
        </padding>

        <!-- Descrizione -->
        <VBox spacing="5.0">
          <Label text="Descrizione" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
          <Label fx:id="descriptionLabel" wrapText="true" style="-fx-font-size: 14px;"/>
        </VBox>

        <!-- Tags -->
        <VBox spacing="5.0">
          <Label text="Tags" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
          <FlowPane fx:id="tagsFlowPane" hgap="10.0" vgap="5.0"/>
        </VBox>

        <!-- Ingredienti -->
        <VBox spacing="10.0">
          <Label text="Ingredienti" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
          <GridPane fx:id="ingredientsGrid" hgap="15.0" vgap="8.0">
            <columnConstraints>
              <ColumnConstraints halignment="RIGHT" minWidth="200.0" prefWidth="200.0"/>
              <ColumnConstraints halignment="LEFT" minWidth="100.0" prefWidth="150.0"/>
              <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            </columnConstraints>
          </GridPane>
        </VBox>

        <!-- Istruzioni preparazione in anticipo -->
        <VBox spacing="10.0">
          <Label text="Preparazione in Anticipo" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
          <VBox fx:id="advanceInstructionsBox" spacing="5.0"/>
        </VBox>

        <!-- Istruzioni ultimo minuto -->
        <VBox spacing="10.0">
          <Label text="Preparazione dell'Ultimo Minuto" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
          <VBox fx:id="lastMinuteInstructionsBox" spacing="5.0"/>
        </VBox>

        <!-- Informazioni aggiuntive -->
        <VBox spacing="5.0">
          <Label text="Informazioni Aggiuntive" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
          <GridPane hgap="15.0" vgap="5.0">
            <columnConstraints>
              <ColumnConstraints halignment="RIGHT" minWidth="100.0" prefWidth="120.0"/>
              <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            </columnConstraints>
            
            <Label text="Autore originale:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label fx:id="authorLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            
            <Label text="Proprietario:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="ownerDetailLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
          </GridPane>
        </VBox>

      </VBox>
    </ScrollPane>
  </center>

  <bottom>
    <HBox alignment="CENTER_RIGHT" spacing="15.0">
      <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="10.0"/>
      </padding>
      
      <Button fx:id="printButton" text="Stampa" onAction="#handlePrint" 
              prefWidth="80.0"/>
      
      <Button fx:id="closeButton" text="Chiudi" onAction="#handleClose" 
              prefWidth="80.0" cancelButton="true" defaultButton="true"/>
    </HBox>
  </bottom>

</BorderPane>